<h2>Discover Movies</h2>
<div id='find-movies-button'>
  <%= button_to 'Find Top Rated Movies', user_movies_path(@user) , method: :get%>
</div>
<br>
<div id='movie-search'>
    <%= form_with url: user_movies_path(@user), local: true, method: :get do |form|%>
    <%= form.text_field :movie_title %>
    <%= form.submit 'Find Movies' %>
  <% end %>
</div>