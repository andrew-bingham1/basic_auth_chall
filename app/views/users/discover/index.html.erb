<h2>Discover Movies</h2>
<div id='find-movies-button'>
  <%= button_to 'Find Top Rated Movies', user_movies_path(@user, q: 'top%20rated') , method: :get%>
</div>
<br>
<div id='movie-search'>
  <%= form_with(url: user_movies_path(@user), method: :get, params: { q: params[:q] }) do |form| %>
    <%= form.text_field :search %> 
    <%= form.submit "Find Movies" %>
  <% end %>
</div>